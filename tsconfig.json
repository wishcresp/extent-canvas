{
	"compilerOptions": {
		"target": "ES2015",
		"module": "CommonJS",
    "outDir": "dist",
		"jsx": "react-jsx",
    "declaration": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noUncheckedIndexedAccess": true,
		"noPropertyAccessFromIndexSignature": true
	},
  "include": [
		"src",
	],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true
	}
}